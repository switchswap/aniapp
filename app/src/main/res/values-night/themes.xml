<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Main app theme (dark) -->
    <style name="Theme.AniApp" parent="Base.Theme.AniApp">

        <!-- Brand colors -->
        <item name="colorPrimary">@color/lightblue_400</item>
        <item name="colorPrimaryVariant">@color/lightblue_600</item>
        <item name="colorSecondary">@color/lightblue_400</item>
        <item name="colorSecondaryVariant">@color/lightblue_600</item>

        <!-- Background, surface, error colors -->
        <item name="android:colorBackground">@color/black_900</item>
        <item name="colorSurface">@color/black_800</item>
        <item name="colorError">@color/red_200</item>

        <!-- "On" colors -->
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnError">@color/black</item>

        <!-- Toggle dark system bars -->
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">false</item>
    </style>

    <!-- AMOLED app theme -->
    <style name="Theme.AniApp.AMOLED" parent="Theme.AniApp">
        <!-- Blacken background colors -->
        <item name="android:colorBackground">@color/black</item>
        <item name="colorSurface">@color/black</item>

    </style>


</resources>